@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4><i class="fas fa-user-circle"></i> Employee Login</h4>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label for="empId"><i class="fas fa-id-badge"></i> Employee ID</label>
                        <input type="text" id="empId" class="form-control rounded-pill" placeholder="Enter Employee ID" />
                    </div>

                    <div class="form-group mb-3">
                        <label for="password"><i class="fas fa-key"></i> Password</label>
                        <div class="input-group rounded-pill">
                            <input type="password" id="password" class="form-control rounded-pill " placeholder="Enter Password" />
                            <button class="btn " type="button" id="togglePassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-primary rounded-pill" onclick="login()"><i class="fas fa-sign-in-alt"></i> Login</button>
                        <a class="btn btn-outline-secondary rounded-pill" asp-controller="Home" asp-action="Register">
                            <i class="fas fa-user-plus "></i> Register
                        </a>
                    </div>
                    <div class="text-center mt-2">
                        <a href="#" onclick="showForgotPassword()">Forgot Password?</a>
                    </div>


                    <p id="error" class="text-danger mt-3 text-center"></p>
                    <p id="success" class="text-success mt-3 text-center"></p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Forgot Password Modal -->
<div class="modal fade" id="forgotPasswordModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3">
            <div class="modal-header">
                <h5 class="modal-title">Reset Password</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="step1">
                    <label>Employee ID</label>
                    <input type="text" id="fpEmpId" class="form-control mb-2" />
                    <button class="btn btn-primary w-100" onclick="sendOtp()">Send OTP</button>
                </div>

                <div id="step2" class="d-none">
                    <label>Enter OTP</label>
                    <input type="text" id="otpInput" class="form-control mb-2" />
                    <button class="btn btn-success w-100" onclick="verifyOtp()">Verify OTP</button>
                </div>

                <div id="step3" class="d-none">
                    <label>New Password</label>
                    <div class="input-group mb-2">
                        <input type="password" id="newPassword" class="form-control" />
                        <button class="btn btn-outline-secondary" onclick="toggleNewPassword(this)"><i class="fas fa-eye"></i></button>
                    </div>
                    <label>Confirm Password</label>
                    <div class="input-group mb-2">
                        <input type="password" id="confirmPassword" class="form-control" />
                        <button class="btn btn-outline-secondary" onclick="toggleNewPassword(this)"><i class="fas fa-eye"></i></button>
                    </div>
                    <div class="text-danger mb-2" id="passwordError" style="display:none;"></div>
                    <button class="btn btn-warning w-100" onclick="resetPassword()">Reset Password</button>
                </div>

                <p id="fpMsg" class="text-center mt-2"></p>
            </div>
        </div>
    </div>
</div>
<script>
    function showForgotPassword() {
        const modal = new bootstrap.Modal(document.getElementById("forgotPasswordModal"));
        modal.show();
    }

    function sendOtp() {
        const empId = document.getElementById("fpEmpId").value.trim();
        if (!empId) return alert("Please enter Employee ID");

        axios.post("/api/employee/forgot-password", JSON.stringify(empId), {
            headers: { "Content-Type": "application/json" }
        }).then(res => {
            document.getElementById("step1").classList.add("d-none");
            document.getElementById("step2").classList.remove("d-none");
            document.getElementById("fpMsg").innerText = res.data.message;
        }).catch(err => {
            document.getElementById("fpMsg").innerText = err.response?.data?.message || "Error sending OTP.";
        });
    }

    function verifyOtp() {
        const otp = document.getElementById("otpInput").value.trim();
        if (!otp) return alert("Enter OTP");

        axios.post("/api/employee/verify-otp", JSON.stringify(otp), {
            headers: { "Content-Type": "application/json" }
        }).then(res => {
            document.getElementById("step2").classList.add("d-none");
            document.getElementById("step3").classList.remove("d-none");
            document.getElementById("fpMsg").innerText = res.data.message;
        }).catch(err => {
            document.getElementById("fpMsg").innerText = err.response?.data?.message || "Invalid OTP";
        });
    }

    function toggleNewPassword(btn) {
        const input = btn.previousElementSibling;
        input.type = input.type === "password" ? "text" : "password";
        const icon = btn.querySelector("i");
        icon.classList.toggle("fa-eye");
        icon.classList.toggle("fa-eye-slash");
    }

    function resetPassword() {
        const newPass = document.getElementById("newPassword").value.trim();
        const confirmPass = document.getElementById("confirmPassword").value.trim();
        const errorBox = document.getElementById("passwordError");

        if (!newPass || !confirmPass) {
            errorBox.innerText = "Please fill both password fields.";
            errorBox.style.display = "block";
            return;
        }

        if (newPass !== confirmPass) {
            errorBox.innerText = "Passwords do not match.";
            errorBox.style.display = "block";
            return;
        }

        errorBox.style.display = "none";

        axios.post("/api/employee/reset-password", { newPassword: newPass })
            .then(res => {
                alert("Password reset successfully. Please log in.");
                location.reload();
            }).catch(err => {
                alert("Failed to reset password.");
            });
    }
</script>


<script>
    // Toggle password visibility
    document.getElementById("togglePassword").addEventListener("click", function () {
        const passwordInput = document.getElementById("password");
        const icon = this.querySelector("i");

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            passwordInput.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    });

    async function login() {
        const empId = document.getElementById("empId").value.trim();
        const password = document.getElementById("password").value.trim();
        const errorBox = document.getElementById("error");
        const successBox = document.getElementById("success");

        errorBox.innerText = "";
        successBox.innerText = "";

        if (!empId || !password) {
            errorBox.innerText = "Please enter Employee ID and Password.";
            return;
        }

        try {
            const res = await axios.post("/api/Employee/DoLogin", { EmpId: empId, Password: password });

            if (res.data && res.data.success) {
                successBox.innerText = "Login successful!";
                window.location.href = res.data.redirectUrl || "/Home/Index";
            }
        } catch (err) {
            console.error(err);
            const msg = err.response?.data?.message ?? "Error connecting to server.";
            errorBox.innerText = msg;
        }
    }
</script>
